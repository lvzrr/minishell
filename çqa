#include "mini_parser.h"

/*
 *	2>&1		->	{TOK_REDIR_nn, "2:1"}
 *	1>&2		->	{TOK_REDIR_nn, "1:2"}
 *	< name		->	{TOK_REDIR_IN, name}
 *	> name		->	{TOK_REDIR_TO, name}
 *	>> name		->	{TOK_APPEND_TO, name}
 *	2> name		->	{TOK_REDIR_TO_FD, name}
 *	2>> name	->	{TOK_APPEND_TO_FD, name}
 *
 *	TODO:
 *	propagar errores en este archivo
 */

void	rr(t_tok *t, t_vec *tokv, size_t i)
{
	ft_tstr_clear(&t->s);
	if (i + 1 < tokv->size && (t + 1)->type == TOK_IDENT)
	{
		ft_tstr_pushstr(&t->s, (t + 1)->s.data);
		collapse_at(tokv, i + 1);
	}
	if (i > 0 && (t - 1)->type == TOK_IDENT && ft_isnumeric((t - 1)->s.data))
	{
		ft_tstr_push(&t->s, ':');
		ft_tstr_pushslice(&t->s, (t - 1)->s.data, (t - 1)->s.len);
		t->type = TOK_REDIR_FROM_FD;
		collapse_at(tokv, i - 1);
		return ;
	}
	t->type = TOK_REDIR_TO;
}

void	rl(t_tok *t, t_vec *tokv, size_t i)
{
	ft_tstr_clear(&t->s);
	if (i + 1 < tokv->size && (t + 1)->type == TOK_IDENT)
	{
		ft_tstr_pushstr(&t->s, (t + 1)->s.data);
		collapse_at(tokv, i + 1);
	}
	t->type = TOK_REDIR_IN;
}

void	rapp(t_tok *t, t_vec *tokv, size_t i)
{
	ft_tstr_clear(&t->s);
	if (i + 1 < tokv->size && (t + 1)->type == TOK_IDENT)
	{
		ft_tstr_pushstr(&t->s, (t + 1)->s.data);
		collapse_at(tokv, i + 1);
	}
	if (i > 0 && (t - 1)->type == TOK_IDENT && ft_isnumeric((t - 1)->s.data))
	{
		ft_tstr_push(&t->s, ':');
		ft_tstr_pushslice(&t->s, (t - 1)->s.data, (t - 1)->s.len);
		t->type = TOK_APPEND_FROM_FD;
		collapse_at(tokv, i - 1);
		return ;
	}
	t->type = TOK_APPEND_TO;
}

void	rd_nn(t_tok *t, t_vec *tokv, size_t i)
{
	ft_tstr_clear(&t->s);
	if (i + 1 < tokv->size && (t + 1)->type == TOK_IDENT
			&& i > 0 && (t - 1)->type == TOK_IDENT
			&& ft_isnumeric((t - 1)->s.data) && ft_isnumeric((t + 1)->s.data))
	{
		ft_tstr_pushstr(&t->s, (t - 1)->s.data);
		ft_tstr_push(&t->s, ':');
		ft_tstr_pushstr(&t->s, (t + 1)->s.data);
		collapse_at(tokv, i - 1);
		collapse_at(tokv, i);
	}
	(t - 1)->type = TOK_REDIR_NN;
}

void	manage_redirs(t_vec *tokv)
{
	size_t	i;
	t_tok	*t;

	i = 0;
	while (i < tokv->size)
	{
		t = ft_vec_get_mut(tokv, i);
		if (!t)
		{
			i++;
			continue ;
		}
		if (t->type == TOK_RR)
			rr(t, tokv, i);
		else if (t->type == TOK_LR)
			rl(t, tokv, i);
		else if (t->type == TOK_REDIR)
			rd_nn(t, tokv, i);
		else if (t->type == TOK_RAPPEND)
			rapp(t, tokv, i);
		i++;
	}
}
